{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@user/*": ["./user/*"],
      "@auth/*": ["./auth/*"],
      "@shared/*": ["./shared/*"],
      "@graphql/*": ["./graphql/*"],
      "@product/*": ["./product/*"],
      "@color/*": ["./color/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "src/*"]
}
